@model IEnumerable<Mvc.Models.LotViewModel>
@{
    ViewBag.Title = "Index";
}
<h2>All lots</h2>
<hr />
<div class="album text-muted" style="padding-top:20px">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.OwnerId == 0) { 
                <div class="col-xs-12 col-md-6 col-lg-4">
                    <div class="hidden">
                        @Html.EditorFor(model => item.Id)
                        @Html.EditorFor(model => item.CreatorId)
                        @Html.EditorFor(model => item.OwnerId)
                    </div>

                    <div class="card" style="word-wrap: break-word; overflow: hidden;"height: 100px;">
                        @if (item.Img != null)
                        {
                            @Html.Raw("<img alt='100 % x280' style='height: 280px; width: 100 %; display: block; '  src=\"data:image/jpeg;base64,"
                                                 + Convert.ToBase64String(item.Img) + "\"  data-holder-rendered='true'/>")
                        }
                        else {
                            <img data-src="holder.js/100px280/thumb" alt="100%x280" style="height: 280px; width: 100%; display: block;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22296%22%20height%3D%22280%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20296%20280%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_15ca737d6e4%20text%20%7B%20fill%3A%23AAAAAA%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A15pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_15ca737d6e4%22%3E%3Crect%20width%3D%22296%22%20height%3D%22280%22%20fill%3D%22%23EEEEEE%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%22109.0703125%22%20y%3D%22146.6%22%3E296x280%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                        }
                        <p class="card-text"><h3>@Html.ActionLink(item.Name, "Details","Lot", new { lotId = item.Id }, null)</h3></p>
                        <div >
                            <p class="card-text main" style="height: 30px;">@item.Description</p>
                        </div>
                    </div>
                </div>
                }
            }

        </div>
    </div>
</div>

<script src="jquery.dotdotdot.min.js"></script>
<script>
$(function(){
  $('.main').dotdotdot();
});
</script>